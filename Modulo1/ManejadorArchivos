package cine;

/**
 * Clase utilitaria para el manejo de archivos de la aplicación.
 * Proporciona métodos para leer y escribir objetos en archivos.
 * 
 * @author
 */

import java.io.*;
import java.util.ArrayList;
import java.util.List;

public class ManejadorArchivos {

    private static final String RUTA_ARCHIVOS = "ArchivosAplicacion/";
    
    public static <T> void guardarObjetos(List<T> objetos, String nombreArchivo) {
        crearDirectorioSiNoExiste();
        try (ObjectOutputStream oos = new ObjectOutputStream(
             new FileOutputStream(RUTA_ARCHIVOS + nombreArchivo))) {
            oos.writeObject(objetos);
        } catch (IOException e) {
            System.err.println("Error al guardar en archivo: " + e.getMessage());
        }
    }
    
    @SuppressWarnings("unchecked")
    public static <T> List<T> cargarObjetos(String nombreArchivo) {
        crearDirectorioSiNoExiste();
        File archivo = new File(RUTA_ARCHIVOS + nombreArchivo);
        if (!archivo.exists()) {
            return new ArrayList<>();
        }
        
        try (ObjectInputStream ois = new ObjectInputStream(
             new FileInputStream(archivo))) {
            return (List<T>) ois.readObject();
        } catch (IOException | ClassNotFoundException e) {
            System.err.println("Error al cargar archivo: " + e.getMessage());
            return new ArrayList<>();
        }
    }
    
    private static void crearDirectorioSiNoExiste() {
        File directorio = new File(RUTA_ARCHIVOS);
        if (!directorio.exists()) {
            directorio.mkdirs();
        }
    }
}
